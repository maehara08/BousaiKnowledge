<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GooglePlusButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#dd4b39</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FacebookButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#3b5998</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TwitterButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#55acee</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.MyTheme1.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:windowBackground">@android:color/white</item>
    </style>


</resources>
